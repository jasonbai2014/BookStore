@model BookStore.Web.Models.Book

@{
    ViewBag.Title = "Creare a new book";
}

<div class="col-sm-4 col-sm-push-4">
    <h2>Add a new book</h2>
    <h3>@TempData["CustomError"]</h3>
    @using (Html.BeginForm("Create", "BookManage", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.Partial("BookForm", Model);

        <div class="form-group">
            <label for="file">Select an image: </label>
            <input type="file" name="file"/>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-default btn-primary">Save</button>
            @Html.ActionLink("Cancel and return to list", "Index", null, new { @class = "btn btn-default btn-primary" })
        </div>
    }
</div>

