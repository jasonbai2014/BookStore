@model BookStore.Web.Models.Book

@{
    ViewBag.Title = "Edit" + Model.Name;
}

<div class="panel panel-default col-sm-4 col-sm-push-4">
    <div class="panel-body">
        <h2>Edit @Model.Name</h2>
        @using (Html.BeginForm())
        {
            @Html.Partial("BookForm", Model);


            <div class="text-center">
                <button type="submit" class="btn btn-default btn-primary btn-lg btn-block">Save</button>
                @Html.ActionLink("Cancel and return to list", "Index", null, new { @class = "btn btn-default btn-lg btn-block" })
            </div>
        }
    </div>
</div>

