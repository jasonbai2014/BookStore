@model BookStore.Web.Models.Book

@{
    ViewBag.Title = "Creare a new book";
}

<div class="panel panel-default col-sm-4 col-sm-push-4">
    <div class="panel-body">
        <h2>Add a new book</h2>
        <h3>@TempData["CustomError"]</h3>
        @using (Html.BeginForm("Create", "BookManage", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.Partial("BookForm", Model);

            <div class="form-group">
                <label for="file">Select an image: </label>
                <input type="file" name="file" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-default btn-primary btn-block btn-lg">Save</button>
                @Html.ActionLink("Cancel and return to list", "Index", null, new { @class = "btn btn-default btn-block btn-lg" })
            </div>
        }
    </div>
</div>

